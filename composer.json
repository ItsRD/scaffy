{
    "name": "itsrd/scaffy",
    "type": "library",
    "description": "Making your life easier by scaffolding your Laravel application",
    "keywords": [
        "ItsRD",
        "Scaffy"
    ],
    "homepage": "https://github.com/ItsRD/Scaffy",
    "license": "MIT",
    "authors": [
        {
            "name": "Rick van der Burg",
            "email": "rick@pixcero.nl",
            "homepage": "https://pixcero.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "^5.6|^6.0|^7.0|^8.0",
        "php" : "~7.0"
    },
    "autoload": {
        "psr-4": {
            "ItsRD\\Scaffy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ItsRD\\Scaffy\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
